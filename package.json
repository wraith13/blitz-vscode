{
    "name": "blitz",
    "displayName": "blitz",
    "description": "blitz config for VS Code",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.45.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:blitz.editUserSettings",
        "onCommand:blitz.editWorkspaceSettings",
        "onCommand:blitz.editFolderSettings",
        "onCommand:blitz.editUserOverrideSettings",
        "onCommand:blitz.editWorkspaceOverrideSettings",
        "onCommand:blitz.editFolderOverrideSettings"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "menus": {
            "commandPalette": [
                {
                    "command": "blitz.editWorkspaceSettings",
                    "when": "workbenchState == 'workspace'"
                },
                {
                    "command": "blitz.editFolderSettings",
                    "when": "workbenchState != 'empty'"
                },
                {
                    "command": "blitz.editUserOverrideSettings",
                    "when": "editorLangId"
                },
                {
                    "command": "blitz.editWorkspaceOverrideSettings",
                    "when": "editorLangId && workbenchState == 'workspace'"
                },
                {
                    "command": "blitz.editFolderOverrideSettings",
                    "when": "editorLangId && workbenchState != 'empty'"
                }
            ]
        },
        "commands": [
            {
                "command": "blitz.editUserSettings",
                "title": "Edit User Settings",
                "category": "Blitz"
            },
            {
                "command": "blitz.editWorkspaceSettings",
                "title": "Edit Workspace Settings",
                "category": "Blitz"
            },
            {
                "command": "blitz.editFolderSettings",
                "title": "Edit Folder Settings",
                "category": "Blitz"
            },
            {
                "command": "blitz.editUserOverrideSettings",
                "title": "Edit User Override Settings",
                "category": "Blitz"
            },
            {
                "command": "blitz.editWorkspaceOverrideSettings",
                "title": "Edit Workspace Override Settings",
                "category": "Blitz"
            },
            {
                "command": "blitz.editFolderOverrideSettings",
                "title": "Edit Folder Override Settings",
                "category": "Blitz"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint source --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.45.0",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "eslint": "^6.8.0",
        "@typescript-eslint/parser": "^2.30.0",
        "@typescript-eslint/eslint-plugin": "^2.30.0",
        "glob": "^7.1.6",
        "mocha": "^7.1.2",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0"
    }
}
