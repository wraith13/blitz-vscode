{
    "name": "blitz",
    "displayName": "blitz",
    "description": "blitz config for VS Code",
    "icon": "images/blitzhex.128.png",
    "version": "0.0.1",
    "license": "SEE LICENSE IN LICENSE_1_0.txt",
    "engines": {
        "vscode": "^1.45.0"
    },
    "bugs": {
        "url": "https://github.com/wraith13/blitz-vscode/issues"
    },
    "homepage": "https://github.com/wraith13/blitz-vscode",
    "repository": {
        "type": "git",
        "url": "https://github.com/wraith13/blitz-vscode.git"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/source/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "blitz.editSetting",
                "title": "Edit Setting",
                "category": "Blitz"
            },
            {
                "command": "blitz.undoSetting",
                "title": "Undo Setting",
                "category": "Blitz"
            },
            {
                "command": "blitz.redoSetting",
                "title": "Redo Setting",
                "category": "Blitz"
            },
            {
                "command": "blitz.clearHistory",
                "title": "Clear Setting History",
                "category": "Blitz"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "blitz.undoSetting",
                    "when": "isUndosableBlitz"
                },
                {
                    "command": "blitz.redoSetting",
                    "when": "isRedosableBlitz"
                }
            ]
        },
        "configuration": [
            {
                "title": "Blitz",
                "properties": {
                    "blitz.statusBar.Label": {
                        "type": "string",
                        "default": "$(settings-gear)",
                        "description": "%blitz.statusBar.Label.description%"
                    },
                    "blitz.statusBar.Alignment": {
                        "type": "string",
                        "default": "left",
                        "enum": [
                            "none",
                            "left",
                            "right"
                        ],
                        "description": "%blitz.statusBar.Alignment.description%"
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint source --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.45.0",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "eslint": "^6.8.0",
        "@typescript-eslint/parser": "^2.30.0",
        "@typescript-eslint/eslint-plugin": "^2.30.0",
        "glob": "^7.1.6",
        "mocha": "^7.1.2",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0"
    }
}
