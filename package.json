{
    "name": "blitz",
    "displayName": "blitz",
    "description": "blitz config for VS Code",
    "icon": "images/blitzhex.128.png",
    "version": "0.0.1",
    "license": "SEE LICENSE IN LICENSE_1_0.txt",
    "engines": {
        "vscode": "^1.45.0"
    },
    "bugs": {
        "url": "https://github.com/wraith13/blitz-vscode/issues"
    },
    "homepage": "https://github.com/wraith13/blitz-vscode",
    "repository": {
        "type": "git",
        "url": "https://github.com/wraith13/blitz-vscode.git"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:blitz.editSettings"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "blitz.editSettings",
                "title": "Edit Settings",
                "category": "Blitz"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint source --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.45.0",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "eslint": "^6.8.0",
        "@typescript-eslint/parser": "^2.30.0",
        "@typescript-eslint/eslint-plugin": "^2.30.0",
        "glob": "^7.1.6",
        "mocha": "^7.1.2",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0"
    }
}
